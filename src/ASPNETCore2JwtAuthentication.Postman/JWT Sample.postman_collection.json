		{
			"name": "Login",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "7d9ab820-a531-416d-ab27-9ebd0bda4067",
						"exec": [
							"pm.environment.set(\"newId\", \"name \" + parseInt(Math.random() * 10000));"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "4d4ce29f-31f6-4bcd-a069-36804ee772e3",
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.globals.set(\"access_token\", jsonData.access_token);",
							"pm.globals.set(\"refresh_token\", jsonData.refresh_token);",
							"pm.globals.set('XSRF-TOKEN', pm.cookies.get('XSRF-TOKEN'))",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"username\": \"Vahid\",\r\n    \"password\": \"12345\"\r\n}"
				},
				"url": {
					"raw": "https://localhost:5001/api/account/login",
					"protocol": "https",
					"host": [
						"localhost"
					],
					"port": "5001",
